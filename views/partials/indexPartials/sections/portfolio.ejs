<style>
  .portfolio-content img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 5px;
  }
</style>
<section id="portfolio" class="portfolio section light-background">
  <!-- Section Title -->
  <div class="container section-title" data-aos="fade-up">
    <h2><%= setting.portfolioSection?.mainTitle || 'Portfolio' %></h2>
    <p><%= setting.portfolioSection?.description || '' %></p>
  </div><!-- End Section Title -->

  <div class="container">
    <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

      <!-- Filters -->
      <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
        <li data-filter="*" class="filter-active">All</li>
        <% setting.portfolioSection?.filters?.forEach(filter => { %>
          <li data-filter=".<%= filter.className %>"><%= filter.name %></li>
        <% }) %>
      </ul><!-- End Portfolio Filters -->

      <!-- Portfolio Items -->
      <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
        <% setting.portfolioSection?.items?.forEach(item => { %>
          <div class="col-lg-4 col-md-6 portfolio-item isotope-item <%= item.categoryClasses ? item.categoryClasses.join(' ') : '' %>">
            <div class="portfolio-content h-100">
              <img src="<%= item.imageUrl %>" class="img-fluid" alt="">
              <div class="portfolio-info">
                <h4><%= item.title %></h4>
                <p><%= item.description %></p>
                <a href="<%= item.imageUrl %>" title="<%= item.previewTitle || item.title %>" data-gallery="<%= item.galleryGroup %>" class="glightbox preview-link">
                  <i class="bi bi-zoom-in"></i>
                </a>
                <a href="<%= item.detailsLink || '#' %>" title="More Details" class="details-link">
                  <i class="bi bi-link-45deg"></i>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div><!-- End Portfolio Container -->

    </div>
  </div>
</section>
