<!DOCTYPE html>
<html lang="en">
<%- include('../../../partials/dashboardPartials/head.ejs') %>

<body id="page-top">
  <div id="wrapper">
    <!-- Sidebar -->
    <%- include('../../../partials/dashboardPartials/sidebar.ejs') %>

    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">
        <!-- Topbar -->
        <%- include('../../../partials/dashboardPartials/topbar.ejs') %>

        <!-- Flash messages -->
        <% if (success && success.length > 0) { %>
          <div class="alert alert-success" id="flash-success">
            <%= success[0] %>
          </div>
        <% } %>

        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger" id="flash-error">
            <%= error[0] %>
          </div>
        <% } %>

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Contact Settings</h1>

        <div class="row">
          <div class="col-lg-12">
            <form action="/dashboard/contact?_method=PUT" method="POST">
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Manage Contact Info</h6>
                </div>
                <div class="card-body">
                  <% const contact = setting?.contactSection || {}; %>

                  <div class="form-group">
                    <label>Address</label>
                    <input type="text" name="contactSection[address]" class="form-control" value="<%= contact.address || '' %>" required>
                  </div>

                  <div class="form-group">
                    <label>Phone</label>
                    <input type="text" name="contactSection[phone]" class="form-control" value="<%= contact.phone || '' %>" required>
                  </div>

                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="contactSection[email]" class="form-control" value="<%= contact.email || '' %>" required>
                  </div>

                  <div class="form-group">
                    <label>Map Embed URL</label>
                    <textarea name="contactSection[mapEmbedUrl]" class="form-control" rows="3" required><%= contact.mapEmbedUrl || '' %></textarea>
                  </div>

                  <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
                </div>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

  <a class="scroll-to-top rounded" href="#page-top"><i class="fas fa-angle-up"></i></a>
  <%- include('../../../partials/dashboardPartials/logout.ejs') %>

  <!-- Scripts -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
